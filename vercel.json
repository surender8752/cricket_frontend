{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/ipl-logo.png",
            "dest": "/ipl-logo.png"
        },
        {
            "src": "/hero-player.jpg",
            "dest": "/hero-player.jpg"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}